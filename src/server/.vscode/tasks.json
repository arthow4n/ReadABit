{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "regenerate-client",
            "command": "sh",
            "type": "shell",
            "args": [
                "scripts/regenerate-client.sh",
            ],
            "problemMatcher": [],
        },
        {
            "label": "init",
            "command": "sh",
            "type": "shell",
            "args": [
                "scripts/init.sh",
            ],
            "problemMatcher": [],
        },
        {
            "label": "add-migration",
            "command": "sh",
            "type": "shell",
            "args": [
                "scripts/add-migration.sh",
                "${input:addMigrationName}",
            ],
            "problemMatcher": [],
        },
        {
            "label": "apply-migrations",
            "command": "sh",
            "type": "shell",
            "args": [
                "scripts/apply-migrations.sh",
                "${input:applyMigrationName}",
            ],
            "problemMatcher": [],
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ReadABit.Web/ReadABit.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ReadABit.Web/ReadABit.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/ReadABit.Web/ReadABit.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
    ],
    "inputs": [
        {
            "id": "addMigrationName",
            "description": "Name of migration that will be created",
            "type": "promptString",
        },
        {
            "id": "applyMigrationName",
            "description": "Target migration version that the database will be migrated to. Leave empty to apply all pending migrations. Enter 0 for reverting all migrations.",
            "type": "promptString",
        },
    ],
}